<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/text_view_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            tools:text="Title"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
            android:id="@+id/text_view_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_goneMarginEnd="@dimen/margin_8dp"
            tools:text="Description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/image_view_ref"
            android:layout_marginEnd="@dimen/margin_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="@dimen/margin_8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/image_view_ref"
            android:scaleType="centerCrop"
            android:minHeight="@dimen/min_image_size"
            android:minWidth="@dimen/min_image_size"
            app:layout_constraintTop_toTopOf="@+id/text_view_description"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@null"/>
</androidx.constraintlayout.widget.ConstraintLayout>
